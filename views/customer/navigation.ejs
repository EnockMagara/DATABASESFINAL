<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('../header') %>

    <h1>Customer Navigation</h1>
    <link rel="stylesheet" href="/css/main.css">
    <h1>My Booked Flights</h1>
    <table id="flights-table" class="styled-table">
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>Route</th>
                <th>Departure</th>
                <th>Sold Price</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(flight => { %>
                <tr>
                    <td><%= flight.flight_number %></td>
                    <td><%= flight.departure_airport %> to <%= flight.arrival_airport %></td>
                    <td><%= new Date(flight.departure_datetime).toLocaleString() %></td>
                    <td>$<%= flight.sold_price %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <nav>
        <a href="/customer/ratings" class="btn">Ratings</a>
        <a href="/customer/purchase" class="btn">Purchase Ticket</a>
        <a href="/customer/spending" class="btn">View Spending</a>
    </nav>
</body>
</html>